<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:orientation="vertical"
    android:background="#f2f2f2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.tutorialsee.ecommer.SliderLayout
                    android:id="@+id/slider"
                    android:layout_width="match_parent"
                    custom:pager_animation_span="1100"
                    android:layout_height="300dp"
                    style="@style/AndroidImageSlider_Oval_Black"
                    android:background="#fff" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#fff">

                    <com.tutorialsee.ecommer.MyTextView
                        android:layout_marginTop="16dp"
                        android:layout_weight="1"
                        android:id="@+id/est"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Electronic"
                        android:textSize="16dp"
                        android:textColor="@color/colorSub"
                        android:layout_marginLeft="16dp" />


                    <LinearLayout
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.tutorialsee.ecommer.MyTextView
                            android:id="@+id/itemname"
                            android:layout_width="261dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="HP Laptop"
                            android:textColor="@color/colorTex"
                            android:textSize="21dp"
                            android:visibility="visible" />

                        <com.tutorialsee.ecommer.MyTextView
                            android:id="@+id/price"
                            android:layout_weight="5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" Rs.25,000"
                            android:textSize="21dp"
                            android:textColor="@color/colorTex" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fbfaff">

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                        </LinearLayout>

                        <LinearLayout
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <LinearLayout
                                android:layout_weight="1"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:padding="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/adsds"
                        android:orientation="vertical">

                        <com.tutorialsee.ecommer.MyTextView
                            android:id="@+id/discription"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DSCRIPTION"
                            android:textSize="14dp"
                            android:textColor="@color/colorTex" />

                        <com.tutorialsee.ecommer.MyTextView
                            android:id="@+id/discription1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="16dp"
                            android:layout_weight="1"
                            android:lineSpacingExtra="4dp"
                            android:text=" Warranty Period:1 Year
                            Usage:Home
                            Resolution:1366x768 (WXGA)
                            Base Clock Speed (in GHz):1.8
                            Backlit Keyboard:No"
                            android:textColor="@color/colorTex"
                            android:textSize="13dp" />


                        <com.tutorialsee.ecommer.MyTextView
                            android:layout_marginTop="22dp"
                            android:layout_marginLeft="22dp"
                            android:layout_marginRight="22dp"
                            android:id="@+id/addtocart"
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ADD TO CART"
                            android:textSize="14dp"
                            android:textColor="#fff"
                            android:background="@drawable/rects"
                            android:gravity="center"
                            android:drawableRight="@mipmap/cart"
                            android:padding="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_marginTop="11dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colordevider" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="#fff">

                        <com.tutorialsee.ecommer.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="10dp"
                            android:padding="16dp"
                            android:text="Suggestion"
                            android:textColor="@color/colorSub"
                            android:textSize="16dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colordevider"
                            android:padding="16dp" />

                        <com.tutorialsee.ecommer.ExpandableHeightGridView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:verticalSpacing="1.5dp"
                            android:stretchMode="columnWidth"
                            android:numColumns="2"
                            android:isScrollContainer="false"
                            android:horizontalSpacing="1.5dp"
                            android:id="@+id/gridview"
                            android:background="#fbfaff" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar">
            </include>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
